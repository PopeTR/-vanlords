<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1515876305430-f06edab8282a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80);">
  <div class="container">
    <div class="row">
      <div class="search-flex">
        <h1 class="search-header">Looking for a campervan?</h1>
        <h2 class="search-header">We got you.</h2>
        <form>
          <input class="form-control form-control-lg" type="text" placeholder="Location">
          <div class="form-row">
            <div class="col">
              <input type="text" class="form-control form-control-lg" placeholder="Start Date">
            </div>
            <div class="col">
              <input type="text" class="form-control form-control-lg" placeholder="End Date">
            </div>
          </div>
        </form>
        <a class="btn btn-success" href="#">Search</a>
      </div>
    </div>
  </div>
</div>

<div class="container-camper">
  <div class="header-van">
    <%= image_tag "camper.png", class: "img-wagon", alt: "camper-icon", width: 30 %>
    <h2>Our Happy Campers</h2>
    <i class="fas fa-chevron-down"></i>
  </div>
</div>

<div class="cards">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?campervan)">
    Lisbon
  </div>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?van)">
    London
  </div>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?camper)">
    Sydney
  </div>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?camping)">
    Zagreb
  </div>
</div>

<div class="container">
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
