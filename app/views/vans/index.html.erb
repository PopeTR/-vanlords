<div class="container">
  <div class="row">
    <div class="container">
         <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
    <% @vans.each do |van| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card-trip">
          <%= cl_image_tag van.photo.key %>
          <div class="card-trip-infos">
            <div>
              <h2><%=van.title%></h2>
              <p><%=van.location%></p>
              <p>Sleeps: <%=van.size%></p>
              <p>â‚¬<%=van.price_per_night%> per night</p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
