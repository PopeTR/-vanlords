<div class="main-container">
    <div class="container">
         <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
    <div class="cards">
      <% @vans.each do |van| %>
          <div class="card-trip">
            <%= cl_image_tag van.photo.key %>
            <div class="card-trip-infos">
              <div>
                <h2><%=link_to "#{van.title}", van_path(van.id)%></h2>
                <p><%=van.location%></p>
                <p>Sleeps: <%=van.size%></p>
                <p>â‚¬<%=van.price_per_night%> per night</p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
</div>
